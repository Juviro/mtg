{
  "extends": ["prettier", "node"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "no-new": 0,
    "no-process-exit": 0,
    "no-console": ["error", { "allow": ["warn", "error", "info"] }],
    "import/no-nodejs-modules": 0,
    "import/prefer-default-export": 0,
    "import/no-namespace": 0,
    "arrow-body-style": 0,
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "^_",
        "argsIgnorePattern": "^_"
      }
    ]
  },
  "env": {
    "es6": true
  }
}
