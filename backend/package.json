{
  "name": "mtg-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=development nodemon --exec babel-node ./src/index.js",
    "start-staging": "NODE_ENV=staging nodemon --exec babel-node ./dist/index.js",
    "start-prod": "NODE_ENV=production pm2 start ./dist/index.js --name backend --interpreter ./node_modules/.bin/babel-node",
    "stop-prod": "pm2 delete backend",
    "build": "babel src --out-dir dist",
    "migrate": "babel-node node_modules/.bin/knex migrate:latest",
    "rollback": "babel-node node_modules/.bin/knex migrate:rollback",
    "update-cards": "babel-node src/cardApi/updateCardsManually.js",
    "update-cards-prod": "NODE_ENV=production babel-node src/cardApi/updateCardsManually.js",
    "lint": "eslint --fix src"
  },
  "dependencies": {
    "apollo-server-koa": "^2.9.13",
    "body-parser": "^1.18.3",
    "cron": "^1.7.2",
    "crypto": "^1.0.1",
    "google-auth-library": "^5.6.1",
    "graphql-tag": "^2.10.3",
    "graphql-tools": "^4.0.6",
    "http-status-codes": "^1.4.0",
    "knex": "^0.20.4",
    "koa": "^2.11.0",
    "line-by-line": "^0.1.6",
    "lodash": "^4.17.15",
    "merge-graphql-schemas": "^1.5.8",
    "mysql": "^2.17.1",
    "node-fetch": "^2.6.0",
    "pg": "^7.15.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.2",
    "eslint": "^6.8.0",
    "eslint-config-node": "^4.0.0",
    "eslint-config-prettier": "^6.8.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.1.2",
    "nodemon": "^2.0.1",
    "pm2": "^4.2.3"
  }
}
