{
  "name": "mtg-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=development nodemon --exec babel-node ./src/index.js",
    "build": "babel src --out-dir dist",
    "migrate": "babel-node node_modules/.bin/knex migrate:latest",
    "rollback": "babel-node node_modules/.bin/knex migrate:rollback",
    "updateCards": "babel-node src/cron/updateCardsManually.js",
    "lint": "eslint --fix src",
    "install-prod": "yarn install --production=false"
  },
  "dependencies": {
    "apollo-server-koa": "^2.9.13",
    "body-parser": "^1.18.3",
    "cron": "^1.7.2",
    "crypto": "^1.0.1",
    "google-auth-library": "^5.6.1",
    "graphql-tools": "^4.0.6",
    "http-status-codes": "^1.4.0",
    "knex": "^0.20.4",
    "koa": "^2.11.0",
    "lodash": "^4.17.15",
    "merge-graphql-schemas": "^1.5.8",
    "mysql": "^2.17.1",
    "pg": "^7.15.0",
    "scryfall-sdk": "^1.5.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.2",
    "eslint": "^6.8.0",
    "eslint-config-node": "^4.0.0",
    "eslint-config-prettier": "^6.8.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.1.2",
    "nodemon": "^2.0.1"
  }
}